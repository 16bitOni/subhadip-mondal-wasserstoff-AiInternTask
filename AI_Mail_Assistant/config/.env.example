# App Configuration
ENV=development
LOG_LEVEL=INFO

# Gmail API Configuration
GMAIL_API_CREDENTIALS_FILE=config/credentials.json
GMAIL_API_TOKEN_FILE=config/token.json

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# Database Configuration
DB_TYPE=sqlite  # Options: postgres, sqlite
DB_NAME=email_assistant.db
# For PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=your-slack-channel-id

# Google Calendar Configuration
CALENDAR_ID=primary

# Web Search Configuration
GOOGLE_SEARCH_API_KEY=your_google_search_api_key
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id

# Email Processing Configuration
EMAIL_FETCH_INTERVAL=300  # In seconds
EMAIL_LIMIT=10  # Number of emails to fetch at once
AUTO_REPLY_ENABLED=false
AUTO_FORWARD_ENABLED=false 